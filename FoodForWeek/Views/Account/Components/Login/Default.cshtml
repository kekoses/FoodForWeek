@model LoginViewModel
<form class="login p-2" method="post" asp-action="Login" asp-controller="Account">
    <h2 class="text-lg-start text-center">Login form</h2>
    <div class="form-group my-2">
        <label asp-for="LoggingUser.Email">Write your email</label>
        <input class="form-control" type="email" asp-for="LoggingUser.Email" placeholder="example@com.ru" />
        <span asp-validation-for="LoggingUser.Email" class="text-danger"></span>
    </div>
    <div class="form-group my-2">
        <label asp-for="LoggingUser.Password">Compose your own password</label>
        <input class="form-control" type="password" asp-for="LoggingUser.Password" />
        <span asp-validation-for="LoggingUser.Password" class="text-danger"></span>
    </div>
    <div class="form-group my-2">
        <label asp-for="LoggingUser.RememberMe">Remember?</label>
        <input asp-for="LoggingUser.RememberMe" />
    </div>
    <button class="btn btn-primary mt-1" type="submit">Login</button>
    <div class="mt-2">
        <span>You have not registered yet? Tap <a asp-action="Register" asp-controller="Account">here</a> for that.</span>
    </div>
</form>